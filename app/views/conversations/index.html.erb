<div class="container-fluid">
  <h2>All conversations</h2>
  <% @conversations.each do |conversation| %>
  <div class="row-fluid">
    <div class="span12">
      <div class="span8 offset1">
        <ul class="unstyled">
          <li>Sent to: <%= link_to conversation.to_number, conversation %></li>
          <li>Sent on: <%= conversation.date.to_s(:date_format) %></li>
          <li><%= conversation.message %></li>
          <li><%= link_to 'Show', conversation %> | <%= link_to 'Destroy', conversation, method: :delete, data: { confirm: 'Are you sure?' } %></li>
        </ul>
      </div>    
    </div>
  </div>
  <% end %>
</div>