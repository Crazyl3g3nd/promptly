<div>
	<%= f.label :messagetext, "Message text", :class => 'control-label' %>
	<div class="controls">
	  <%= f.text_area :messagetext, :rows=>5, :placeholder => "Your report will be sent on x date" %>
	</div>
	<div class="field">
    <div class="control-group">
      <%= f.label :send_date, :class => 'control-label' %>
      <div class="control-group">
        <%= f.date_select :send_date,{:start_year => Time.now.year,
          :use_short_month => true,
          :order => [:month, :day, :year],
          :prompt => {:month => 'Month', :day => 'Day', :year => 'Year'}},
          {:class => 'year',
          :id => 'reminder_date'} %>
        </div>
      </div>
  </div>
</div>
