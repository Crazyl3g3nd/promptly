<div class="container"> <!-- main container -->
  <div class="row-fluid">
    <div class="span4">
      <%= render 'sidebar' %>
    </div>
    <div class="span8">
      <div class="row-fluid">
        <div class="span12 mainHeaderGreen">
          <span class="greenHighlight">Upcoming deliveries</span>
        </div>
        <div class="span12 conversation">
          <%= render(:partial => 'reminders', object: @upcoming) || 'There are no upcoming reminders' %>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span12 mainHeaderAqua">
          <span class="aquaHighlight">Recent conversations</span>
        </div>
        <div class="span12 conversation">
          <div class="recentMessage">
            <table class="table tableAqua">
              <thead>
                <tr>
                  <th>Message</th>
                  <th>Date sent</th>
                  <th>Message status</th>
                </tr>
              </thead>
              <%= render(:partial => 'messages', :collection => @conversations, :as => :recents) || 'There are no recent conversations' %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
